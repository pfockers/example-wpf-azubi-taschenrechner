<Window x:Class="Taschenrechner_Own_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Taschenrechner_Own_MVVM.ViewModel"
        Title="Taschenrechner"
        Width="420"
        Height="520"
        Background="#f4f6fb"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:CalculatorViewModel />
    </Window.DataContext>
    <Window.Resources>
        <!--  Modern Button Style  -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#e3e7ef" />
            <Setter Property="BorderBrush" Value="#c3c8d1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#222" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d0d6e6" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b8bfd1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  Style for the "C" button  -->
        <Style x:Key="ClearButton"
               BasedOn="{StaticResource ModernButton}"
               TargetType="Button">
            <Setter Property="Background" Value="#ff6b6b" />
            <Setter Property="BorderBrush" Value="#e55a5a" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff8787" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#e55a5a" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  Style for the "=" button  -->
        <Style x:Key="EqualButton"
               BasedOn="{StaticResource ModernButton}"
               TargetType="Button">
            <Setter Property="Background" Value="#4f8cff" />
            <Setter Property="BorderBrush" Value="#3a6fd8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7daaff" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3a6fd8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Margin="10"
                Background="White"
                BorderBrush="#e3e7ef"
                BorderThickness="1"
                CornerRadius="14">
            <Grid>
                <TextBox Name="ErgebnisTextBox"
                         Height="56"
                         Margin="12,12,12,0"
                         VerticalAlignment="Top"
                         HorizontalContentAlignment="Right"
                         Background="#f4f6fb"
                         BorderThickness="0"
                         FontSize="28"
                         FontWeight="Bold"
                         Foreground="#222"
                         IsReadOnly="True"
                         Padding="0,0,10,0"
                         Text="{Binding Display, UpdateSourceTrigger=PropertyChanged}" />
                <UniformGrid Margin="12,80,12,12"
                             Columns="4"
                             Rows="5">
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="7"
                            Content="7"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="8"
                            Content="8"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="9"
                            Content="9"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding OperatorCommand}"
                            CommandParameter="/"
                            Content="/"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="4"
                            Content="4"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="5"
                            Content="5"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="6"
                            Content="6"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding OperatorCommand}"
                            CommandParameter="*"
                            Content="*"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="1"
                            Content="1"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="2"
                            Content="2"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="3"
                            Content="3"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding OperatorCommand}"
                            CommandParameter="-"
                            Content="-"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding NumberCommand}"
                            CommandParameter="0"
                            Content="0"
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding KommaCommand}"
                            Content=","
                            Style="{StaticResource ModernButton}" />
                    <Button Command="{Binding EqualCommand}"
                            Content="="
                            Style="{StaticResource EqualButton}" />
                    <Button Command="{Binding OperatorCommand}"
                            CommandParameter="+"
                            Content="+"
                            Style="{StaticResource ModernButton}" />
                    <Button Grid.ColumnSpan="4"
                            Command="{Binding ClearCommand}"
                            Content="C"
                            Style="{StaticResource ClearButton}" />
                </UniformGrid>
            </Grid>
        </Border>
    </Grid>
</Window>