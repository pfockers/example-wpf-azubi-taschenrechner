<Window x:Class="Taschenrechner_Own_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:TaschenrechnerOwnMvvm="clr-namespace:Taschenrechner_Own_MVVM"
        xmlns:vm="clr-namespace:Taschenrechner_Own_MVVM.ViewModel"
        Title="Taschenrechner"
        Width="300"
        Height="350">
    <Window.DataContext>
        <vm:CalculatorViewModel />
    </Window.DataContext>
    <Grid>
        <TextBox Name="ErgebnisTextBox"
                 Height="40"
                 Margin="10"
                 FontSize="24"
                 IsReadOnly="True"
                 Text="{Binding Display, UpdateSourceTrigger=PropertyChanged}" />
        <UniformGrid Margin="10,60,10,10"
                     Columns="4"
                     Rows="5">
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="7"
                    Content="7" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="8"
                    Content="8" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="9"
                    Content="9" />
            <Button Command="{Binding OperatorCommand}"
                    CommandParameter="/"
                    Content="/" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="4"
                    Content="4" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="5"
                    Content="5" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="6"
                    Content="6" />
            <Button Command="{Binding OperatorCommand}"
                    CommandParameter="*"
                    Content="*" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="1"
                    Content="1" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="2"
                    Content="2" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="3"
                    Content="3" />
            <Button Command="{Binding OperatorCommand}"
                    CommandParameter="-"
                    Content="-" />
            <Button Command="{Binding NumberCommand}"
                    CommandParameter="0"
                    Content="0" />
            <Button Command="{Binding KommaCommand}" Content="," />
            <Button Command="{Binding EqualCommand}" Content="=" />
            <Button Command="{Binding OperatorCommand}"
                    CommandParameter="+"
                    Content="+" />
            <Button Grid.ColumnSpan="4"
                    Command="{Binding ClearCommand}"
                    Content="C" />
        </UniformGrid>
    </Grid>
</Window>