<Window x:Class="Taschenrechner_Own.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taschenrechner"
        Width="300"
        Height="350">
    <Grid>
        <TextBox Name="ErgebnisTextBox"
                 Height="40"
                 Margin="10,10,10,0"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Top"
                 FontSize="20"
                 IsReadOnly="True" />

        <Grid Margin="10,60,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Zahlen  -->
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Click="Zahl_Click"
                    Content="7" />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Click="Zahl_Click"
                    Content="8" />
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Click="Zahl_Click"
                    Content="9" />
            <Button Grid.Row="0"
                    Grid.Column="3"
                    Click="Clear_Click"
                    Content="C" />

            <Button Grid.Row="1"
                    Grid.Column="0"
                    Click="Zahl_Click"
                    Content="4" />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Click="Zahl_Click"
                    Content="5" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Click="Zahl_Click"
                    Content="6" />
            <Button Grid.Row="1"
                    Grid.Column="3"
                    Click="Operator_Click"
                    Content="+" />

            <Button Grid.Row="2"
                    Grid.Column="0"
                    Click="Zahl_Click"
                    Content="1" />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Click="Zahl_Click"
                    Content="2" />
            <Button Grid.Row="2"
                    Grid.Column="2"
                    Click="Zahl_Click"
                    Content="3" />
            <Button Grid.Row="2"
                    Grid.Column="3"
                    Click="Operator_Click"
                    Content="-" />

            <Button Grid.Row="3"
                    Grid.Column="0"
                    Click="Zahl_Click"
                    Content="0" />
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Click="Komma_Click"
                    Content="," />
            <Button Grid.Row="3"
                    Grid.Column="2"
                    Click="Gleich_Click"
                    Content="=" />
            <Button Grid.Row="3"
                    Grid.Column="3"
                    Click="Operator_Click"
                    Content="*" />

            <Button Grid.Row="4"
                    Grid.Column="3"
                    Click="Operator_Click"
                    Content="/" />
        </Grid>
    </Grid>
</Window>