<Window x:Class="Taschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taschenrechner" Height="350" Width="300">
    <Grid>
        <TextBox Name="ErgebnisTextBox" HorizontalAlignment="Stretch" Margin="10,10,10,0" Height="40" VerticalAlignment="Top" FontSize="20" IsReadOnly="True"/>

        <Grid Margin="10,60,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Zahlen -->
            <Button Content="7" Grid.Row="0" Grid.Column="0" Click="Zahl_Click"/>
            <Button Content="8" Grid.Row="0" Grid.Column="1" Click="Zahl_Click"/>
            <Button Content="9" Grid.Row="0" Grid.Column="2" Click="Zahl_Click"/>
            <Button Content="C" Grid.Row="0" Grid.Column="3" Click="Clear_Click"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="Zahl_Click"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="Zahl_Click"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="Zahl_Click"/>
            <Button Content="+" Grid.Row="1" Grid.Column="3" Click="Operator_Click"/>

            <Button Content="1" Grid.Row="2" Grid.Column="0" Click="Zahl_Click"/>
            <Button Content="2" Grid.Row="2" Grid.Column="1" Click="Zahl_Click"/>
            <Button Content="3" Grid.Row="2" Grid.Column="2" Click="Zahl_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" Click="Operator_Click"/>

            <Button Content="0" Grid.Row="3" Grid.Column="0" Click="Zahl_Click"/>
            <Button Content="," Grid.Row="3" Grid.Column="1" Click="Komma_Click"/>
            <Button Content="=" Grid.Row="3" Grid.Column="2" Click="Gleich_Click"/>
            <Button Content="*" Grid.Row="3" Grid.Column="3" Click="Operator_Click"/>

            <Button Content="/" Grid.Row="4" Grid.Column="3" Click="Operator_Click"/>
        </Grid>
    </Grid>
</Window>